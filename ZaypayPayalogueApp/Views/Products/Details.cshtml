@model ZaypayPayalogueApp.Models.Product

@section AddToHead{
    <script src="http://www.zaypay.com/pay/{@Model.PayalogueId}.js" type="text/javascript"></script>
}

<fieldset>
    
    <center>
    <table class="table-bordered" style="width:600px;">            
        <tr style="height:50px;">
            <th align="left" style="padding-left:30px;">
                Name:
            </th>
            <td>
                @Model.Name
            </td>            
        </tr>
        <tr style="height:50px;">
            <th align="left" style="padding-left:30px;">
                Description: 
            </th>
            <td>
                @Model.Description
            </td>                        
        </tr>
        <tr style="height:50px;">
            <th align="left" style="padding-left:30px;">
                Pay With Zaypay 
            </th>
            <td>
                <a href="http://www.zaypay.com/pay/@Model.PayalogueId?product_id=@Model.ID" onclick="ZPayment(this); return false"><img src="http://www.zaypay.com/pay/@Model.PayalogueId/img" border="0" /></a>     
            </td>            
        </tr>
    </table>
    </center>
</fieldset>

    

    
    

